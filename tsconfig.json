{
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "pretty": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "strict": false,
    "skipLibCheck": false,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*",
        "src/*"
      ]
    },
    "lib": [
      "es2015",
      "es6",
      "es7",
      "dom",
      "es2018",
      "esnext"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ]
}
